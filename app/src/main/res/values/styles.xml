<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Transparent" parent="AppTheme">
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppTheme.Launcher" parent="AppTheme.Transparent">
        <item name="android:windowBackground">@drawable/splash_screen_drawable</item>
    </style>

    <style name="AroundAfricaNavigationView" parent="Widget.Design.NavigationView">
        <item name="android:textSize">14sp</item>
        <item name="android:activatedBackgroundIndicator">@color/color_white</item>
        <item name="android:textColor">@color/color_white</item>
    </style>
</resources>
